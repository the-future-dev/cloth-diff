% Section formatting
\def\section{\@startsection{section}{1}{\z@}
  {-3.5ex plus -1.0ex minus -.2ex}
  {2.0ex plus 0.5ex}
  {\Large\bfseries}}

\def\section*{\@startsection{section}{1}{\z@}
  {-4ex plus -1.5ex minus -.2ex}
  {2.5ex plus 0.5ex}
